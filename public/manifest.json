{
	"name": "Hapin Plus",
	"version": "0.1",
	"description": "基于哈拼项目的浏览器插件项目",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.global.js"
	},
	"permissions": [
		"contextMenus"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "assets/icons/16.png",
			"32": "assets/icons/32.png",
			"48": "assets/icons/48.png",
			"128": "assets/icons/128.png"
		}
	},
	"icons": {
		"16": "assets/icons/16.png",
		"32": "assets/icons/32.png",
		"48": "assets/icons/48.png",
		"128": "assets/icons/128.png"
	}
}